\usepackage{ifthen}

\newcommand{\ifequals}[3]{
  \ifthenelse{\equal{#1}{#2}}{#3}{}
}

% Dummy stuff, so \renewcommand has something to overwrite...
\newcommand{\case}[2]{
  #1 #2
} 

\newenvironment{switch}[1]{
  \renewcommand{\case}{\ifequals{#1}}
}{}

