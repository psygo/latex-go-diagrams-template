\newcommand{\drawBlackStone}[2]{
  \draw[draw = white, fill = black, line width = 0.1mm]
    (#1, #2) circle [radius = 0.2575cm] % chktex 1
}
\newcommand{\drawWhiteStone}[2]{
  \draw[draw = black, fill = white, line width = 0.1mm]
    (#1, #2) circle [smooth, radius = 0.25cm] % chktex 1
}

\newcommand{\drawStone}[3]{
  \begin{switch}{#1}
    \case{black}{
      \drawBlackStone{#2}{#3};
    }
    \case{white}{
      \drawWhiteStone{#2}{#3};
    }
  \end{switch}
}

\newcounter{moveCounter}
\setcounter{moveCounter}{1}
\newcommand{\drawMove}[3]{
  \begin{switch}{#1}
    % TODO: Change fontsize if the number goes beyond 99.
    \case{black}{
      \drawBlackStone{#2}{#3}
        node[color = white] {\themoveCounter};
    }
    \case{white}{
      \drawWhiteStone{#2}{#3}
        node {\themoveCounter};
    }

    \stepcounter{moveCounter}
  \end{switch}
}

